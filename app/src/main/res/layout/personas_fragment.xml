<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:paddingTop="?attr/actionBarSize">

   <RelativeLayout
       android:orientation="vertical"
       android:background="@color/colorb"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:ignore="MissingConstraints"
       android:id="@+id/principal3">
       <ImageView
           android:layout_centerHorizontal="true"
           android:id="@+id/centrado"
           android:layout_width="280dp"
           android:layout_height="280dp"
           android:background="@drawable/aquascale"/>
       <TextView
           android:layout_marginTop="30dp"
           android:paddingStart="5dp"
           android:paddingTop="10dp"
         android:paddingBottom="10dp"
           android:textSize="21dp"
           android:fontFamily="@font/texto"
           android:textStyle="bold"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/custom_button_background"
           android:text="Â¿SEGURO QUE QUIERES CERRAR SESION?"
           android:layout_below="@+id/centrado"
           android:textAlignment="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/textosalir"
            />
       <LinearLayout

           android:id="@+id/centrado2"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_below="@id/centrado"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="150dp"
           android:background="@color/white"
           android:gravity="center_horizontal"
           android:orientation="horizontal">

           <Button
               android:layout_gravity="center"
               android:id="@+id/button6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               android:text="CERRAR SESION"
               android:textAlignment="center"
               android:textSize="12sp"
               android:textStyle="bold"
               android:background="@drawable/custom_button_background"
               android:textColor="@color/white"
               android:fontFamily="@font/texto"/>

           <Button
               android:layout_gravity="center"
               android:id="@+id/button7"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="15dp"
               android:layout_marginEnd="15dp"
               android:text="CANCELAR"
               android:textAlignment="center"
               android:textSize="12sp"
               android:textStyle="bold"
               android:background="@drawable/custom_button_background"
               android:textColor="@color/white"
               android:fontFamily="@font/texto"/>
       </LinearLayout>
       <RelativeLayout
           android:layout_marginTop="100dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/centrado2"
           android:background="@drawable/rounded_background">
           <View
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/rounded_background"
               tools:ignore="NotSibling" />
       </RelativeLayout>


       <LinearLayout
           android:background="@color/colorbb"
           android:layout_marginTop="1004dp"
           android:layout_below="@+id/centrado2"
           android:id="@+id/ultimo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           tools:ignore="NotSibling">

       </LinearLayout>




   </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>